[alias]
    lg = log --decorate --oneline --graph
    st = status -s
    d = difftool

[diff]
    tool = mydiff

[difftool "mydiff"]
    cmd = "vimdiff -c 'set diffopt+=iwhite' \"$REMOTE\" \"$LOCAL\""

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[core]
    editor = vim
    longpaths = true
    excludesFile  = ~/.gitignore

[branch]
    autosetuprebase = always
