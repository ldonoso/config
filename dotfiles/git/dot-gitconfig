#[include]
#    path = ~/src/config/dotfiles/git/dot-gitconfig

[user]
    name = Luis Donoso
    email = luisantoniod@gmail.com

[core]
    editor = nvim
    longpaths = true
    excludesFile  = ~/.gitignore
    commitGraph = true
    ignorecase = true
    fileMode = false

[gc]
    writeCommitGraph = true

[fetch]
    writeCommitGraph = true  # on fetch, update the cached graph of commits
    prune = true  # automatically delete remote tracking branches that have been deleted

[branch]
    autosetuprebase = always
    sort = -committerdate

[commit]
    verbose = true

[log]
    date = relative
    prune = true

[alias]
    lg = log --decorate --oneline --graph --pretty=format:\"%C(auto)%h%d%Creset %C(cyan)(%cr)%Creset %s\"
    st = status -s
    bl = blame -w -C -C -C
    spull = __git_spull() { git pull "$@" && git submodule sync --recursive && git submodule update --init --recursive; }; __git_spull

[status]
    submoduleSummary = true

[diff]
    tool = nvimdiff
    submodule = log
    algorithm = histogram
    colorMoved = default  # uses different colours to highlight lines in diffs that have been “moved”

[difftool]
    prompt = false  # stop prompting about luanching difftool
    trustExitCode = true  # abort all diffs with `:cq`

[merge]
    tool = nvimdiff
    conflictStyle = zdiff3

[mergetool]
    prompt = false

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[rebase]
    autoStash = true

[rerere]  # REuse REcorded REsolution
    enabled = true

