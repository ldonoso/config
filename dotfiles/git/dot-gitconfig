[user]
    name = Luis Donoso
    email = luis.donoso@percona.com

[core]
    editor = vim
    longpaths = true
    excludesFile  = ~/.gitignore
    commitGraph = true

[fetch]
    writeCommitGraph = true

[branch]
    autosetuprebase = always

[commit]
    verbose = true

[log]
    date = relative

[alias]
    lg = log --decorate --oneline --graph --pretty=format:\"%C(auto)%h%d%Creset %C(cyan)(%cr)%Creset %s\"
    st = status -s
    spull = __git_spull() { git pull "$@" && git submodule sync --recursive && git submodule update --init --recursive; }; __git_spull

[status]
    submoduleSummary = true

[diff]
    tool = vimdiff
    submodule = log
    algorithm = histogram
    colorMoved = default

[difftool]
    # Be able to abort all diffs with `:cq`
    trustExitCode = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[mergetool "meld"]
    # The default cmd shows $BASE in the middle
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[mergetool "meldPlus"]
    cmd = gitmerge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"

[pull]
    rebase = preserve
