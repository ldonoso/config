PS1='\[\033[01;34m\]\w\[\033[01;31m\]$(__git_ps1 " (%s)")\[\033[00m\]\$ '

check-format() {
    local base_commit=${1:?"Usage: $0 <BASE_COMMIT>"}

    git diff -U0 --no-color $base_commit -- *.c *.cc *.cpp *.h *.hpp *.i *.ic *.ih \
    | clang-format-diff-10 -binary=clang-format-10 -style=file -p1
}
