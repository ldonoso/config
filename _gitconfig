[alias]
    lg1 = log --graph --oneline --decorate --date=relative --all
    st = status -s
    d = difftool

[diff]
    tool = mydiff

[difftool "mydiff"]
    cmd = "vimdiff -c 'set diffopt+=iwhite' \"$REMOTE\" \"$LOCAL\""

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[core]
    longpaths = true
