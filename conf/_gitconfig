[diff]
    tool = mydiff

[difftool "mydiff"]
    cmd = "vimdiff -c 'set diffopt+=iwhite' \"$REMOTE\" \"$LOCAL\""

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

